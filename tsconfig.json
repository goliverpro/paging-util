{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist",
    "rootDir": "./src",

    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": true,
    "sourceMap": true,

    "typeRoots": ["./node_modules/@types/*", "./src/@types"],

    "removeComments": false,
    "isolatedModules": false,
    "strict": false,
    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["src/**/*.spec.ts"],
  "include": ["src/**/*"]
}
